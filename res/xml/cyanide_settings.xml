<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/cyanide_settings_title" >

    <!-- Animation settings -->
	<PreferenceScreen
		android:id="@+id/animations"
		android:title="@string/cyanide_animations_title"
		android:fragment="com.android.settings.cyanide.Animations"/> 
    
    <!-- Gesture anywhere -->
    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.cyanide.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title" />
    
    <!-- Interface -->
    <PreferenceScreen
        android:id="@+id/interface_settings"
        android:title="@string/interface_settings_title"
        android:fragment="com.android.settings.cyanide.InterfaceSettings" /> 
        
    <!-- Lock screen -->
    <PreferenceScreen
        android:id="@+id/lockscreen_settings"
        android:title="@string/lockscreen_settings"
        android:fragment="com.android.settings.lockscreen.LockScreenSettings"
        settings:advanced="true"
        />
        
    <!-- Notifications -->
    <PreferenceScreen
        android:id="@+id/notification_manager"
        android:title="@string/notification_manager"
        android:fragment="com.android.settings.notification.NotificationManagerSettings"
        />
    
    <!-- Quick Settings -->
    <PreferenceScreen
        android:id="@+id/notification_drawer_settings"
        android:title="@string/notification_drawer_title"
        android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings"
        settings:advanced="true"
        />
    
    <!-- Recent Apps Panel -->
	<PreferenceScreen
		android:key="recents_panel"
		android:fragment="com.android.settings.cyanide.RecentsSettings"
		android:title="@string/Recents_panel" >

	</PreferenceScreen>
    
    <!-- Status bar -->
    <PreferenceScreen
        android:id="@+id/status_bar_settings"
        android:title="@string/status_bar_title"
        android:fragment="com.android.settings.cyanogenmod.StatusBarSettings"
        />

</PreferenceScreen>
